# Allow access to this directory
Options +Indexes
Allow from all
Require all granted

# Default document
DirectoryIndex app.html

# If no specific file is requested, serve the app.html
RewriteEngine On
RewriteBase /en/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ app.html [L] 
