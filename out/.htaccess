# Proper configuration for Next.js static export
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Force HTTPS
  RewriteCond %{HTTPS} off
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
  
  # Allow direct access to static assets
  RewriteRule ^_next/(.*)$ _next/$1 [L]
  RewriteRule ^images/(.*)$ images/$1 [L]
  
  # Handle language routes
  RewriteRule ^de/?$ de/index.html [L]
  RewriteRule ^en/?$ en/index.html [L]
  
  # Handle language-specific app paths
  RewriteRule ^de/app/?(.*)$ de/app.html [L]
  RewriteRule ^en/app/?(.*)$ en/app.html [L]
  
  # Fallback to index.html for root requests
  RewriteRule ^$ index.html [L]
</IfModule>

# Set proper MIME types
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType application/json .json
  AddType text/css .css
  AddType image/svg+xml .svg
  AddType image/x-icon .ico
</IfModule>

# GZIP Compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

# Cache Control
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/* "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType image/x-icon "access plus 1 month"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
  ExpiresByType application/json "access plus 1 day"
</IfModule>

# Basic security headers
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /error500.html 
