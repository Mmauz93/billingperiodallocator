# Allow access to this directory
Options +Indexes
Allow from all
Require all granted

# Default document
DirectoryIndex app.html

# Simple redirect to app.html
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /en/
  # Only apply if the file doesn't exist
  RewriteCond %{REQUEST_FILENAME} !-f
  # Redirect to app.html
  RewriteRule ^$ app.html [L]
</IfModule>

# Fallback with meta refresh if mod_rewrite isn't available
<IfModule !mod_rewrite.c>
  ErrorDocument 404 /en/app.html
</IfModule> 
