# Force HTTPS redirection
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Prevent duplicate content with/without trailing slash
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.billsplitter\.siempi\.ch [NC]
RewriteRule ^(.*)$ https://billsplitter.siempi.ch/$1 [L,R=301]

# Set canonical headers
<IfModule mod_headers.c>
    # Set canonical URL in HTTP header
    <FilesMatch "\.(html|php)$">
        Header add Link "<https://billsplitter.siempi.ch%{REQUEST_URI}>;rel=\"canonical\""
    </FilesMatch>
</IfModule>

# Set proper image expiration headers
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS, JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Others
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType application/x-font-woff "access plus 1 year"
</IfModule>

# Handle CORS if needed
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "https://billsplitter.siempi.ch"
</IfModule>

# Protect against clickjacking attacks
<IfModule mod_headers.c>
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule>

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Set cache control for static assets
<FilesMatch "\.(ico|pdf|jpg|jpeg|png|gif|js|css|svg)$">
    Header set Cache-Control "max-age=31536000"
</FilesMatch>

# Keep index.html from being directly accessible if it's serving as a fallback
<Files "www-redirect.html">
    Order Allow,Deny
    Allow from all
</Files>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule> 
